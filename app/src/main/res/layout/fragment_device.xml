<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.DeviceFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/state_connected"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text999"/>
            <TextView
                android:id="@+id/tv_left"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/bg_round_battery_left"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center"
                android:text="L"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"/>
            <TextView
                android:id="@+id/tv_left_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_32"
                android:text="0%"/>
            <TextView
                android:id="@+id/tv_right"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/bg_round_battery_right"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center"
                android:text="R"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"/>
            <TextView
                android:id="@+id/tv_right_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"/>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_114"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_50"
            android:src="@drawable/product_getd"/>

        <LinearLayout
            android:id="@+id/ll_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_107"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_white_radius_10dp"
                    android:layout_marginEnd="@dimen/dp_5">
                    <ImageView
                        android:id="@+id/iv_balance"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginStart="@dimen/dp_16"
                        android:src="@drawable/ic_balance"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_product_fun"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="@string/balance_setting"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_find"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_107"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_white_radius_10dp"
                    android:layout_marginStart="@dimen/dp_5">
                    <ImageView
                        android:id="@+id/iv_find"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginStart="@dimen/dp_16"
                        android:src="@drawable/ic_find"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_product_fun"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="@string/find_device"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gesture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_marginTop="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_107"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_white_radius_10dp"
                    android:layout_marginEnd="@dimen/dp_5">
                    <ImageView
                        android:id="@+id/iv_gesture"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginStart="@dimen/dp_16"
                        android:src="@drawable/ic_gesture"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_product_fun"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="@string/gesture_setting"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_voice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_107"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_white_radius_10dp"
                    android:layout_marginStart="@dimen/dp_5">
                    <ImageView
                        android:id="@+id/iv_voice"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginStart="@dimen/dp_16"
                        android:src="@drawable/ic_voice"/>
                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_edit_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_white_radius_10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginStart="@dimen/dp_21"
                    android:src="@drawable/ic_edit_name"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/modify_name"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/sp_14"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_17"
                    android:src="@drawable/ic_right_grey_16dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_unpair"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_white_radius_10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginStart="@dimen/dp_21"
                    android:src="@drawable/ic_clear"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/clear_pair"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/sp_14"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_17"
                    android:src="@drawable/ic_right_grey_16dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>