<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ai.ChatActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        android:id="@+id/title"
        layout="@layout/layout_title_ai"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ETContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_main_item_radius_10dp"
        android:layout_marginStart="@dimen/padding"
        android:layout_marginEnd="@dimen/padding"
        android:layout_marginBottom="@dimen/padding"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_input_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/tv_record"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="46dp"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="@string/press_to_record"
                android:textColor="@color/text2d2"
                android:textSize="@dimen/sp_16"/>
            <ImageView
                android:id="@+id/iv_switch_text"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_input_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">
            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:hint="@string/input_content"
                android:text=""
                android:background="@null"
                android:maxLines="3"
                android:minLines="1"
                android:padding="7dp"
                android:textColor="@color/text333"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_switch_audio"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/ic_record"/>
            <ImageView
                android:id="@+id/send"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_5"
                android:src="@drawable/send_msg"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>