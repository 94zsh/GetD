<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:id="@+id/v_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health"
            android:textColor="@color/text2d2"
            android:textSize="@dimen/sp_16"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_166"
            android:layout_marginTop="@dimen/dp_15">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/bg_step">
                <ImageView
                    android:id="@+id/iv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_24"
                    android:src="@drawable/ic_step"/>
                <TextView
                    android:id="@+id/tv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/iv_step"
                    android:layout_below="@id/iv_step"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="@string/steps"
                    android:textColor="@color/text2d2"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_step_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_step"
                    android:layout_below="@id/tv_step"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="0"
                    android:textColor="@color/text2d2"
                    android:textSize="@dimen/sp_28"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_step_value"
                    android:layout_alignBaseline="@id/tv_step_value"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="@string/step_unit"
                    android:textColor="@color/text999"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/bg_cal">
                <ImageView
                    android:id="@+id/iv_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_24"
                    android:src="@drawable/ic_cal"/>
                <TextView
                    android:id="@+id/tv_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/iv_cal"
                    android:layout_below="@id/iv_cal"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="@string/calories"
                    android:textColor="@color/text2d2"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_cal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_cal"
                    android:layout_below="@id/tv_cal"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="0"
                    android:textColor="@color/text2d2"
                    android:textSize="@dimen/sp_28"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_cal_value"
                    android:layout_alignBaseline="@id/tv_cal_value"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="@string/calories"
                    android:textColor="@color/text999"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_166"
            android:layout_marginTop="@dimen/dp_10">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/bg_step">
                <ImageView
                    android:id="@+id/iv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_24"
                    android:src="@drawable/ic_distance"/>
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/iv_distance"
                    android:layout_below="@id/iv_distance"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="@string/distance"
                    android:textColor="@color/text2d2"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_distance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_distance"
                    android:layout_below="@id/tv_distance"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="0"
                    android:textColor="@color/text2d2"
                    android:textSize="@dimen/sp_28"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_distance_value"
                    android:layout_alignBaseline="@id/tv_distance_value"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="@string/km"
                    android:textColor="@color/text999"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/bg_cal">
                <ImageView
                    android:id="@+id/iv_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_24"
                    android:src="@drawable/ic_hr"/>
                <TextView
                    android:id="@+id/tv_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/iv_hr"
                    android:layout_below="@id/iv_hr"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="@string/heart_rate"
                    android:textColor="@color/text2d2"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_hr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_hr"
                    android:layout_below="@id/tv_hr"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="0"
                    android:textColor="@color/text2d2"
                    android:textSize="@dimen/sp_28"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_hr_value"
                    android:layout_alignBaseline="@id/tv_hr_value"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="@string/times"
                    android:textColor="@color/text999"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:text="@string/meditation_audio"
            android:textColor="@color/text333"
            android:textSize="@dimen/sp_16"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>